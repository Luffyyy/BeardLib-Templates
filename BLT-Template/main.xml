<!--Read here for info about modules https://github.com/simon-wh/PAYDAY-2-BeardLib/wiki/Module-Config -->
<mod name="YOUR_MOD_NAME" author="YOUR_NAME" global_key="YourClassName" core_class="Core.lua" min_lib_ver="3.0">
    <AssetUpdates id="-1" version="1.0" provider="modworkshop"/>
    <Classes directory="Classes">
        <class file="ExampleClass.lua"/>
    </Classes>

    <Hooks directory="Hooks">
        <hook file="TweakData.lua" source_file="lib/tweak_data/tweakdata"/>
    </Hooks>

    <Localization directory="Loc" default="english.txt">
        <localization language="english" file="english.txt"/>
    </Localization>

    <Options auto_build_menu="true">
        <options>
            <!--Ingame the option menu background will be halved-->
            <merge_data area_bg="half"/>
            <option type="bool" default_value="true" name="ExampleOption"/>
        </options>
    </Options>
</mod>